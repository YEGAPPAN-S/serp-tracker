{
  "manifest_version": 3,
  "name": "SERP Rank Tracker",
  "version": "1.0.0",
  "description": "Track website rankings across multiple countries - Opens results in new tab",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.google.com/*",
    "https://www.google.co.uk/*",
    "https://www.google.de/*",
    "https://www.google.ca/*",
    "https://www.google.co.in/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://www.google.co.uk/*",
        "https://www.google.de/*",
        "https://www.google.ca/*",
        "https://www.google.co.in/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
